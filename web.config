<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <defaultDocument>
            <files>
                <add value="app.py" />
            </files>
        </defaultDocument>
        <rewrite>
            <rules>
                <rule name="HTTP to HTTPS redirect" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="off" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
                </rule>
                <rule name="Proxy WebSocket to Hypercorn" stopProcessing="true">
                    <match url="socket.io/(.*)" />
                    <conditions>
                        <add input="{HTTP_UPGRADE}" pattern="websocket" />
                        <add input="{HTTP_CONNECTION}" pattern="Upgrade" ignoreCase="true" />
                    </conditions>
                    <action type="Rewrite" url="http://127.0.0.1:8000/{R:0}" />
                </rule>
                <rule name="Proxy HTTP to Hypercorn" stopProcessing="true">
                    <match url="(.*)" />
                    <action type="Rewrite" url="http://127.0.0.1:8000/{R:0}" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
    <appSettings>
        <add key="PYTHONPATH" value="C:\WebApps\volley_stats\Volley" />
        <add key="WSGI_HANDLER" value="app.app" />
    </appSettings>
</configuration>